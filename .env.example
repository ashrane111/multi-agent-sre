# ============================================================
# Multi-Agent SRE Platform - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# ============================================================

# ============== LLM Providers ==============
# Groq (Primary) - Get free key at https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Google Gemini (Backup) - Get free key at https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Ollama (Local) - No key needed, just run `ollama serve`
OLLAMA_BASE_URL=http://localhost:11434

# ============== LangSmith Observability ==============
# Get free key at https://smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=multi-agent-sre
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============== Redis (Caching & State) ==============
REDIS_URL=redis://localhost:6379/0

# ============== Application Settings ==============
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# ============== Agent Configuration ==============
# Default models for each agent
ORCHESTRATOR_MODEL=groq/llama-3.3-70b-versatile
MONITOR_MODEL=ollama/llama3.1:8b
DIAGNOSE_MODEL=ollama/mistral:7b
POLICY_MODEL=ollama/llama3.1:8b
REPORT_MODEL=ollama/llama3.1:8b

# ============== Cost & Rate Limits ==============
# Maximum cost per incident (in USD)
MAX_COST_PER_INCIDENT=0.10

# Rate limits (requests per minute)
GROQ_RATE_LIMIT=30
GEMINI_RATE_LIMIT=15

# ============== Reliability Settings ==============
# Circuit breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Timeouts (seconds)
LLM_TIMEOUT=30
AGENT_WORKFLOW_TIMEOUT=300

# Retries
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2

# ============== Memory & RAG ==============
# ChromaDB
CHROMA_PERSIST_DIR=./data/chroma_db

# Mem0 Episodic Memory
MEM0_COLLECTION_NAME=sre_incidents

# RAG Settings
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
RERANKER_TOP_K=3

# ============== Security ==============
# Enable/disable security features
ENABLE_PROMPT_INJECTION_DETECTION=true
ENABLE_PII_REDACTION=true
ENABLE_OUTPUT_VALIDATION=true

# ============== Kubernetes (Optional) ==============
# For local development with Minikube
KUBECONFIG=~/.kube/config
K8S_NAMESPACE=default

# ============== External Integrations (Mocked by default) ==============
# Slack (Optional - for real notifications)
SLACK_WEBHOOK_URL=

# PagerDuty (Optional)
PAGERDUTY_API_KEY=

# GitHub (Optional - for runbook sync)
GITHUB_TOKEN=
